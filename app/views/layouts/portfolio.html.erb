<!DOCTYPE html>
<html>
  <head>
    <title><%= @page_title %></title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'portfolios', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
    <div><%= link_to "Paginal inicial", root_path %></div>
    <div><%= link_to "Sobre", about_path %></div>
    <div><%= link_to "Contato", contact_path %></div>
    <div><%= link_to "Blog", blogs_path %></div>
    <div><%= link_to "Portfolio", portfolios_path %></div>


    <% if current_user.first_name!="Convidado" %>
    <%= link_to "Logout", destroy_user_session_path, method: :delete %>
    <% else  %>
    <%= link_to "Registre-se", new_user_registration_path %>
    <%= link_to "Login", new_user_session_path %>
    <% end  %>
    <%= yield %>
    <% if session[:source] %>
    Obrigado por visitar meu Portfolio atrav√©s do <%= session[:source] %>
    <% end %>
  </body>
</html>
